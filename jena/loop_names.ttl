# loop_names.ttl

@prefix  rdf:      <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix  rdfs:     <http://www.w3.org/2000/01/rdf-schema#> .

@prefix my: <http://vstu.ru/poas/code#> .

###############################
# loop helper
###############################

# Rule: fetch_kind_of_loop-helper [loop & mistake]
[
	(?a my:fetch_kind_of_loop ?Loop),
	(?Loop rdf:type ?LoopClass),
	noValue(?c2 rdfs:subClassOf ?LoopClass),
#	use annotation attached to class itself
	(?LoopClass rdfs:label ?LoopLabel),
	 ->
	 drop(0),
##	 print(?LoopLabel),
	 (?a my:field_kind_of_loop ?LoopLabel),
]


# Rule: name-branch-if-helper [alternative]  « »
[
	(?b my:stmt_name ?_old),
#	guard: no infinite repetitions for this individual
	noValue(?b my:_stmt_name_updated 1),
	(?b rdf:type my:if ),
	(?a my:branches_item ?b),
	(?a rdf:type my:alternative),
	(?b my:cond ?cnd),
	(?cnd my:stmt_name ?cnd_name),

	strConcat( "!{locale:text.branch.if} «", ?cnd_name, "»", ?new_name)
	 ->
	 drop(0),
	 (?b my:stmt_name ?new_name),
	 (?b my:_stmt_name_updated 1)
]

