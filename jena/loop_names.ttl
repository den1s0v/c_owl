# Rule: name-loop-body-helper [loop]
[
	(?b my:stmt_name ?_old),
	noValue(?b my:_stmt_name_updated 1),
	(?b rdf:type my:sequence ),
	(?a my:body ?b),
	(?a rdf:type my:loop),
	(?a my:stmt_name ?loop_name),

	strConcat( "!{locale:text.loop-body} «", ?loop_name, "»", ?new_name)
